@using Nemesys.Models.ViewModels
@model EditInvestigationViewModel

<h2>Edit Report</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="ReportStatusId" class="col-md-2"></label>
        <div class="col-md-5">
            <select asp-for="ReportStatusId"
                    asp-items="@(new SelectList(Model.ReportStatusList,"Id","Name"))">
            </select>
        </div>
        <span asp-validation-for="ReportStatusId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Update Report</button>
    <a asp-controller="Investigation" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
