@using Nemesys.Models
@using Nemesys.Models.ViewModels
@model ReportPostListViewModel

@{
    ViewData["Title"] = "Report Posts";
}
<h1>@ViewData["Title"]</h1>

<h2>Showing @Model.TotalEntries blog entries</h2>
<div class="row">
    @foreach (var blogPost in Model.ReportPosts)
    {
        <div class="card" style="width: 18rem;padding:20px; margin:20px;">
            <img class="card-img-top" src="@blogPost.ImageUrl" alt="Image for @blogPost.Title" />
            <div class="card-body">
                <h3 class="card-title">@blogPost.Title</h3>
                <p class="small">@blogPost.CreatedDate.ToShortDateString() in @blogPost.Category.Name by @blogPost.Author.Name</p>

                <a asp-controller="ReportPosts" asp-action="Details" asp-route-id="@blogPost.Id" class="btn btn-primary">Details</a>


            </div>
        </div>
    }

</div>
